---
import { profile } from '../data/profile';
---

<section
  id="about"
  class="py-section-lg bg-dark-100"
>
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left: Image/Visual -->
      <div class="animate-fade-in-left">
        <div class="relative">
          <div class="aspect-square rounded-2xl bg-gradient-to-br from-primary-400 to-primary-600 p-1">
            <div class="w-full h-full rounded-2xl bg-dark-100 overflow-hidden">
              <img
                src="/img/fondo-car.jpg"
                alt="Carlos Indriago"
                class="w-full h-full object-cover"
              />
            </div>
          </div>
          <!-- Decorative elements -->
          <div class="absolute -top-6 -right-6 w-24 h-24 bg-primary-400/20 rounded-2xl -z-10" />
          <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-primary-600/20 rounded-2xl -z-10" />
        </div>
      </div>

      <!-- Right: Content -->
      <div class="space-y-6 animate-fade-in-right">
        <div>
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
            Sobre <span class="text-gradient">Mí</span>
          </h2>
          <div class="w-20 h-1 bg-gradient-to-r from-primary-400 to-primary-600 rounded-full" />
        </div>

        <div class="space-y-4 text-dark-500 leading-relaxed">
          {profile.bio.split('\n\n').map((paragraph) => (
            <p>{paragraph}</p>
          ))}
        </div>

        <!-- Skills Summary -->
        <div class="space-y-4 pt-4">
          <h3 class="text-xl font-semibold text-white">Habilidades Principales</h3>

          <div class="grid grid-cols-2 gap-4">
            <div class="bg-dark-200 rounded-lg p-4 border border-dark-300">
              <h4 class="text-primary-400 font-semibold mb-2">Frontend</h4>
              <ul class="text-dark-500 text-sm space-y-1">
                <li>• JavaScript / TypeScript</li>
                <li>• React / Angular</li>
                <li>• HTML5 / CSS3</li>
                <li>• Tailwind CSS</li>
              </ul>
            </div>

            <div class="bg-dark-200 rounded-lg p-4 border border-dark-300">
              <h4 class="text-primary-400 font-semibold mb-2">Backend</h4>
              <ul class="text-dark-500 text-sm space-y-1">
                <li>• PHP</li>
                <li>• Node.js</li>
                <li>• MySQL</li>
                <li>• REST APIs</li>
              </ul>
            </div>

            <div class="bg-dark-200 rounded-lg p-4 border border-dark-300">
              <h4 class="text-primary-400 font-semibold mb-2">Herramientas</h4>
              <ul class="text-dark-500 text-sm space-y-1">
                <li>• Git / GitHub</li>
                <li>• Docker</li>
                <li>• VS Code</li>
                <li>• Astro</li>
              </ul>
            </div>

            <div class="bg-dark-200 rounded-lg p-4 border border-dark-300">
              <h4 class="text-primary-400 font-semibold mb-2">Soft Skills</h4>
              <ul class="text-dark-500 text-sm space-y-1">
                <li>• Resolución de Problemas</li>
                <li>• Trabajo en Equipo</li>
                <li>• Aprendizaje Continuo</li>
                <li>• Comunicación</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- CTA -->
        <div class="pt-4">
          <a
            href="#contact"
            class="inline-flex items-center gap-2 px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-glow transition-all duration-300 transform hover:scale-105"
          >
            Hablemos
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
              />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
