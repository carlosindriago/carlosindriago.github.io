---
import { profile } from '../data/profile';
---

<section
  id="hero"
  class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-dark-50 via-dark-100 to-primary-900 bg-pattern overflow-hidden"
>
  <!-- Decorative elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-primary-500/10 rounded-full blur-3xl" />
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-primary-400/10 rounded-full blur-3xl" />
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col lg:flex-row items-center gap-12">
      <!-- Text Content -->
      <div class="flex-1 text-center lg:text-left space-y-6 animate-fade-in-left">
        <div class="space-y-4">
          <h2 class="text-primary-400 font-semibold text-lg">
            Hola, soy
          </h2>
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white leading-tight">
            {profile.name}
          </h1>
          <p class="text-xl md:text-2xl text-dark-600 font-medium">
            {profile.tagline}
          </p>
        </div>

        <p class="text-dark-500 text-lg max-w-2xl leading-relaxed">
          {profile.description}
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start pt-4">
          <a
            href="#contact"
            class="px-8 py-4 bg-primary-600 hover:bg-primary-700 text-white font-semibold rounded-lg shadow-glow hover:shadow-lg transition-all duration-300 transform hover:scale-105 text-center"
          >
            Cont√°ctame
          </a>
          <a
            href="#projects"
            class="px-8 py-4 bg-transparent border-2 border-primary-600 text-primary-400 hover:bg-primary-600 hover:text-white font-semibold rounded-lg transition-all duration-300 text-center"
          >
            Ver Proyectos
          </a>
        </div>

        <!-- Social Links -->
        <div class="flex gap-4 justify-center lg:justify-start pt-6">
          {profile.social.github && (
            <a
              href={profile.social.github}
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 rounded-lg bg-dark-200 hover:bg-primary-600 flex items-center justify-center group transition-all duration-300 hover:scale-110"
              aria-label="GitHub"
            >
              <svg
                class="w-6 h-6 text-dark-500 group-hover:text-white transition-colors"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
            </a>
          )}

          {profile.social.linkedin && (
            <a
              href={profile.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 rounded-lg bg-dark-200 hover:bg-primary-600 flex items-center justify-center group transition-all duration-300 hover:scale-110"
              aria-label="LinkedIn"
            >
              <svg
                class="w-6 h-6 text-dark-500 group-hover:text-white transition-colors"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
          )}
        </div>
      </div>

      <!-- Image/Illustration -->
      <div class="flex-1 flex justify-center lg:justify-end animate-fade-in-right">
        <div class="relative">
          <div class="w-64 h-64 md:w-80 md:h-80 lg:w-96 lg:h-96 rounded-full bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center shadow-glow relative z-10 overflow-hidden">
            <img
              src="/img/icon.png"
              alt={profile.name}
              class="w-48 h-48 md:w-60 md:h-60 lg:w-72 lg:h-72 rounded-full object-cover"
            />
          </div>
          <!-- Decorative circles -->
          <div class="absolute -top-4 -right-4 w-20 h-20 border-4 border-primary-400/30 rounded-full" />
          <div class="absolute -bottom-4 -left-4 w-32 h-32 border-4 border-primary-400/30 rounded-full" />
          <div class="absolute top-1/2 -right-8 w-16 h-16 border-4 border-primary-400/30 rounded-full" />
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <a
        href="#projects"
        class="text-dark-500 hover:text-primary-400 transition-colors"
        aria-label="Scroll down"
      >
        <svg
          class="w-8 h-8"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 14l-7 7m0 0l-7-7m7 7V3"
          />
        </svg>
      </a>
    </div>
  </div>
</section>
