---
import { profile } from '../data/profile';
---

<section id="hero" class="relative min-h-[90vh] flex items-center justify-center overflow-hidden pt-20">
  <!-- Dynamic Background Effects -->
  <div class="absolute top-20 right-0 w-[500px] h-[500px] bg-primary-500/20 rounded-full blur-[100px] animate-pulse-glow" style="animation-delay: 1s;"></div>
  <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-purple-500/10 rounded-full blur-[100px] animate-pulse-glow"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-20">
      
      <!-- Text Content -->
      <div class="flex-1 text-center lg:text-left space-y-8 animate-fade-up">
        <div class="space-y-4">
          <div class="inline-flex items-center px-3 py-1 rounded-full border border-primary-500/30 bg-primary-500/10 backdrop-blur-sm">
            <span class="w-2 h-2 rounded-full bg-primary-400 mr-2 animate-pulse"></span>
            <span class="text-sm font-medium text-primary-300">Disponible para trabajar</span>
          </div>
          
          <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold tracking-tight text-white leading-[1.1]">
            Hola, soy <br class="hidden lg:block"/>
            <span class="text-gradient">Carlos Indriago</span>
          </h1>
          
          <p class="text-xl md:text-2xl text-gray-400 max-w-2xl mx-auto lg:mx-0 font-light leading-relaxed">
            {profile.tagline}
          </p>
        </div>

        <p class="text-gray-500 text-lg max-w-xl mx-auto lg:mx-0 leading-relaxed">
          {profile.description}
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start pt-4">
          <a
            href="#contact"
            class="group px-8 py-4 bg-primary-600 hover:bg-primary-500 text-white font-semibold rounded-full shadow-glow-blue transition-all duration-300 transform hover:scale-105 flex items-center justify-center gap-2"
          >
            <span>Contáctame</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a
            href="#projects"
            class="px-8 py-4 bg-white/5 border border-white/10 hover:bg-white/10 text-white font-medium rounded-full backdrop-blur-sm transition-all duration-300 text-center flex items-center justify-center gap-2"
          >
            Ver Proyectos
          </a>
        </div>

        <!-- Social Links -->
        <div class="flex gap-6 justify-center lg:justify-start pt-8 items-center">
          <span class="text-sm text-gray-500 uppercase tracking-widest font-semibold">Sígueme</span>
          <div class="h-px w-12 bg-gray-800"></div>
          
          <div class="flex gap-4">
            {profile.social.github && (
              <a
                href={profile.social.github}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-white transition-colors duration-300 transform hover:scale-110"
                aria-label="GitHub"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                </svg>
              </a>
            )}

            {profile.social.linkedin && (
              <a
                href={profile.social.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-white transition-colors duration-300 transform hover:scale-110"
                aria-label="LinkedIn"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </a>
            )}
          </div>
        </div>
      </div>

      <!-- Image/Illustration -->
      <div class="flex-1 flex justify-center lg:justify-end animate-fade-up delay-200">
        <div class="relative w-[300px] h-[300px] md:w-[400px] md:h-[400px] lg:w-[500px] lg:h-[500px]">
          <!-- Geometric Shapes Background -->
          <div class="absolute inset-0 bg-gradient-to-tr from-primary-500/20 to-purple-500/20 rounded-full blur-3xl animate-pulse"></div>
          
          <!-- Abstract Card Stack Effect for Profile Image -->
          <div class="absolute inset-4 bg-dark-800/50 backdrop-blur-xl rounded-3xl border border-white/10 transform rotate-6 scale-95 opacity-70"></div>
          <div class="absolute inset-4 bg-dark-800/80 backdrop-blur-xl rounded-3xl border border-white/10 transform -rotate-3 scale-95 opacity-80"></div>
          
          <div class="absolute inset-0 rounded-3xl overflow-hidden glass-panel border-white/10 shadow-2xl relative group">
             <img
              src="/img/hero-avatar.png"
              alt="Web Developer Avatar"
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-dark-950/80 via-transparent to-transparent"></div>
            
            <div class="absolute bottom-6 left-6 right-6">
                <div class="glass p-4 rounded-xl border border-white/10">
                    <p class="text-white font-semibold">Web Developer</p>
                    <p class="text-xs text-gray-400">Building digital experiences</p>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
